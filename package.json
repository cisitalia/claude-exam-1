{
  "name": "sb2-frontend",
  "version": "1.0.0",
  "description": "Spring Boot Frontend with Tailwind CSS, Alpine.js, and htmx",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "tailwindcss -i ./src/main/frontend/styles/input.css -o ./src/main/resources/static/css/output.css --watch",
    "watch:js": "esbuild src/main/frontend/scripts/app.js --bundle --outdir=src/main/resources/static/js --watch",
    "build:css": "tailwindcss -i ./src/main/frontend/styles/input.css -o ./src/main/resources/static/css/output.css --minify",
    "build:js": "esbuild src/main/frontend/scripts/app.js --bundle --outdir=src/main/resources/static/js --minify"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.1",
    "tailwindcss": "^4.0.0-alpha.25"
  },
  "dependencies": {
    "alpinejs": "^3.13.5",
    "htmx.org": "^1.9.10"
  }
}